extends ../layouts/default

block intro
	.container
	.page-header
		h1.text-center References
block content
	.container
		if references.length
		each reference, i in references
			.row
				.col-md-7
					each image, i in reference.image
						img.img-responsive(src=image.fill(700,300),alt=reference.name + ' image ' + (i+1)).img-thumbnail
				.col-md-5
					h3=reference.name
					p #{reference.description}
					a.btn.btn-primary(href=reference.linkaddress,target='_blank')
						|View Project
			hr
		else
			.jumbotron.text-center
				h3(style="margin-bottom:0;margin-top:0;") There are no References yet.